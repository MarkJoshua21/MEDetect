    <h2 class="text-primary text-4xl font-bold tracking-wider text-center">Contact <span class="text-secondary">Us</span></h2>

    <!-- Container for both contact info and contact form -->
    <div id="contact-us-container" class="flex-grow grid grid-cols-1 md:grid-cols-2 place-items-center gap-8 w-4/5 mx-auto">
